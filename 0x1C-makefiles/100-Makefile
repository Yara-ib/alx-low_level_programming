CC = gcc
SRC = main.c school.c
OBJ = ${SRC:.c=.o}
NAME = school
RMF = rm -f
CFLAGS = -Wall -Werror -Wextra -pedantic
AlT_FLAGS = CFLAGS
FILE = m.h
RM: ${RMF}

ifneq ($(wildcard $(FILE)),)
	all
endif

.PHONY: all clean oclean fclean re

all: ${FILE} ${OBJ}
	${CC} ${AlT_FLAGS} $^ -o ${NAME}

clean:
	${RM} *~ ${NAME}

oclean:
	${RM} *.o

fclean: clean oclean

re: fclean all
