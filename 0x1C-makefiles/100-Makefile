SRC = main.c school.c
OBJ = ${SRC:.c=.o}
NAME = school
# RMF = rm -f
CFLAGS = -Wall -Werror -Wextra -pedantic
# AlT_FLAGS = CFLAGS
FILE = m.h

# ifneq ($(wildcard ${FILE}),)
