# endif

all: ${FILE} ${OBJ}
	${CC} $^ -o ${NAME}

# RM: ${RMF}

clean:
	${RM} *~ ${NAME}

oclean:
	${RM} *.o

fclean: clean oclean

re: fclean all

.PHONY: clean oclean fclean re
